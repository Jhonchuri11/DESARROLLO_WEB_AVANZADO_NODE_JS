<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de pedidos</h3>

        {{#if pedidos}}

        <!-- Boton de agregacion de nuevo pedido -->

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page"
            href="/addpedido"> Nuevo pedido <i class="fa-solid fa-square-plus"></i></a></button>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Cliente</th>
                    <th scope="col">Fecha de pedido</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Total a pagar</th>
                    <th scope="col">Medio de pago</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each pedidos}}
                <tr>
                    <td>{{nomcli}}</td>
                    <td>{{fecha}}</td>
                    <td>{{estado}}</td>
                    <td>{{total}}</td>
                    <td>{{metodopago}}</td>
                <td>
                    <div class="">
                        <a href="/editpedido/{{id}}" class="btn btn-warning p-2">
                        <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <a href="/deletepedido/{{id}}"  class="btn btn-danger p-2">
                        <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </div>
                </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark"> 
                    <td colspan="6">REGISTRO DE PEDIDOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear un pedido</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas registrar un pedido de un cliente en la aplicacion</p>
            <a href="/addpedido" class="btn btn-primary">Ir a crear</a>
        </div>
        {{/if}}
    </div>
</div>
