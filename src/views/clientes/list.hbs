<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de clientes</h3>

        <!-- Boton de agregacion de nuevo cliente -->

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page"
            href="/add">Nuevo cliente <i class="fa-solid fa-square-plus"></i></a></button>
        </div>

        {{#if clientes}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Nro. DNI</th>
                    <th scope="col">Nro. Telefono</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clientes}}
                <tr>
                    <td>{{nomcli}}</td>
                    <td>{{apecli}}</td>
                    <td>{{nrodnicli}}</td>
                    <td>{{telcli}}</td>

                <td>
                    <div class="">
                        <a href="/edit/{{idcli}}" class="btn btn-warning p-2">
                        <i class="fa-solid fa-pen-to-square"></i>
                        </a>

                        <a href="/delete/{{idcli}}" class="btn btn-danger p-2">
                        <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </div>
                </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark"> 
                    <td colspan="5">REGISTRO DE CLIENTES</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear una persona</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
            <a href="#" class="btn btn-primary">Ir a crear</a>
        </div>
        {{/if}}
    </div>
</div>